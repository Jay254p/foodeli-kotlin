<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/nameCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/priceCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/nameCart"
                app:layout_constraintStart_toStartOf="@+id/nameCart"
                app:layout_constraintTop_toBottomOf="@+id/nameCart" />

            <ImageButton
                android:id="@+id/addCart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/orangebuttongradient"
                android:padding="2dp"
                android:src="@drawable/plus"
                app:layout_constraintBottom_toBottomOf="@+id/numberCart"
                app:layout_constraintStart_toEndOf="@+id/numberCart"
                app:layout_constraintTop_toTopOf="@+id/numberCart" />

            <ImageButton
                android:id="@+id/minusCart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/orangebuttongradient"
                android:padding="2dp"
                android:src="@drawable/minus"
                app:layout_constraintEnd_toStartOf="@+id/numberCart"
                app:layout_constraintTop_toTopOf="@+id/numberCart" />

            <TextView
                android:id="@+id/numberCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="90dp"
                android:text="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/deleteCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/addCart"
                app:layout_constraintStart_toStartOf="@+id/minusCart"
                app:layout_constraintTop_toBottomOf="@+id/numberCart"
                app:srcCompat="@drawable/trash" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
